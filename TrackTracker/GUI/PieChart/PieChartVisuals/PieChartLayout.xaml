<UserControl x:Class="PieChart.PieChartLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:PieChart">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <c:PiePlotter Margin="10" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" 
                      HoleSize="0.3"/>
            <c:Legend Margin="10" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" />
        </StackPanel>
        
        
    </Grid>
</UserControl>

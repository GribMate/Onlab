<Window x:Class="Onlab.Dialogs.ExceptionNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Onlab.Dialogs"
        mc:Ignorable="d"
        Title="Exception Title" Height="200" Width="400" Background="#FF323232" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="300,130,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" FontSize="14" Click="buttonOK_Click"/>
        <TextBlock x:Name="textBlockDescription" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Short but informative description of the exception that happened while running the application." VerticalAlignment="Top" FontSize="14" Height="70" Width="372" Foreground="Red"/>
        <TextBlock x:Name="textBlockDetails" HorizontalAlignment="Left" Margin="10,80,0,0" TextWrapping="Wrap" Text="Additional short details, like the object's name or the file's location which caused the exception." VerticalAlignment="Top" FontSize="14" Height="43" Width="372" Foreground="White"/>

    </Grid>
</Window>
